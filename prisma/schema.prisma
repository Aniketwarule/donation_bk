generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id          String      @id @default(uuid())
  title       String?
  description String?
  raised      String?
  imageUrl    String?
  goal        String?
  daysLeft    Int?
  createdAt   DateTime    @default(now())
}

model Milestone {
  id         String   @id @default(uuid())
  title      String
  amount     String
  status     String
  campaignId String
}
